# SendGrid API key for sending emails
# Get this from your SendGrid account: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Email addresses
# The email address that will be shown as the sender
EMAIL_FROM=noreply@prateekhakay.com
# The email address where you want to receive contact form submissions
EMAIL_TO=prateek@edoflip.com

# reCAPTCHA keys
# Get these from the Google reCAPTCHA admin console: https://www.google.com/recaptcha/admin
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key_here
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Debugging flags
# Set to 'true' to enable detailed email debugging
DEBUG_EMAIL=false
# Set to 'true' to bypass reCAPTCHA verification in development
SKIP_RECAPTCHA_IN_DEV=true 